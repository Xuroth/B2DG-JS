{{#each products as |product|}}
    <a href="/product/{{product._id}}">
    <div class="card">
        <div class="card-body">
            <h3>{{product.name}}</h3>
        </div>
    </div>
    </a>
{{else}}
<div class="card">
    <h1>No Products!</h1>
</div>
{{/each}}